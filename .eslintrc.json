{
  "env": {
    "browser": true,
    "es6": true,
    "amd": true
  },
  "extends": [
    "standard",
    "plugin:prettier/recommended",
    "prettier/standard"
  ],
  "parserOptions": {
    "parser": "babel-eslint",
    "sourceType": "module"
  },
  "rules": {
    "require-await": "warn"
  },
  "globals": {
    "require": false,
    "requirejs": false
  }
}
