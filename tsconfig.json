{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "./dist-tsc",
    "module": "es6",
    "noImplicitAny": true,
    "outDir": "./dist-tsc",
    "target": "es5",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "strict": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules"]
}
